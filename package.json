{
  "name": "infotel-myanmar-website",
  "version": "1.4.0",
  "description": "Professional website for Infotel Myanmar - Hospitality Technology Solutions with PWA features",
  "main": "index.html",
  "scripts": {
    "start": "python server.py",
    "dev": "python server.py",
    "test": "echo \"Open http://localhost:8000 to test the website\"",
    "build": "node build.js",
    "build:css": "cleancss -o dist/css/style.min.css css/style.css && cleancss -o dist/css/responsive.min.css css/responsive.css",
    "build:js": "uglifyjs js/main.js -o dist/js/main.min.js -c -m",
    "build:images": "echo \"Image optimization would go here\"",
    "deploy": "echo \"Follow DEPLOYMENT_GUIDE.md for deployment instructions\"",
    "lint": "echo \"Running code quality checks...\"",
    "audit": "echo \"Running security audit...\"",
    "performance": "echo \"Running performance tests...\"",
    "accessibility": "echo \"Running accessibility tests...\"",
    "seo": "echo \"Running SEO analysis...\"",
    "pwa": "echo \"PWA features enabled - Service Worker and Manifest configured\"",
    "security": "echo \"Security headers configured - see security-headers.conf\"",
    "optimize": "echo \"Performance optimizations applied\"",
    "clean": "rm -rf dist/",
    "prebuild": "npm run clean && mkdir -p dist/css dist/js dist/assets/images"
  },
  "keywords": [
    "hospitality",
    "technology",
    "myanmar",
    "opera-pms",
    "simphony-pos",
    "micros",
    "hotel-management",
    "website",
    "responsive",
    "pwa",
    "progressive-web-app",
    "accessibility",
    "seo",
    "performance"
  ],
  "author": "Infotel Myanmar",
  "license": "Proprietary",
  "repository": {
    "type": "git",
    "url": "https://github.com/infotelmm/website.git"
  },
  "bugs": {
    "url": "https://github.com/infotelmm/website/issues",
    "email": "info@infotelmyanmar.com"
  },
  "homepage": "https://infotelmyanmar.com",
  "engines": {
    "node": ">=14.0.0",
    "python": ">=3.6.0"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "localtunnel": "^2.0.2",
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "Chrome >= 90",
    "Firefox >= 88",
    "Safari >= 14",
    "Edge >= 90"
  ],
  "files": [
    "index.html",
    "about-us.html",
    "solutions.html",
    "services.html",
    "contact.html",
    "sitemap.xml",
    "manifest.json",
    "sw.js",
    "browserconfig.xml",
    "security-headers.conf",
    "css/",
    "js/",
    "assets/",
    "components/",
    "fonts/",
    "README.md",
    "PROJECT_DOCUMENTATION.md",
    "DEVELOPMENT_TESTING.md",
    "DEPLOYMENT_GUIDE.md"
  ],
  "config": {
    "port": 8000,
    "host": "localhost"
  },
  "pwa": {
    "enabled": true,
    "serviceWorker": "sw.js",
    "manifest": "manifest.json"
  },
  "performance": {
    "lighthouse": "95+",
    "firstContentfulPaint": "<1.5s",
    "largestContentfulPaint": "<2s",
    "cumulativeLayoutShift": "<0.1"
  },
  "accessibility": {
    "wcag": "2.1 AA",
    "screenReader": true,
    "keyboardNavigation": true,
    "colorContrast": "4.5:1"
  },
  "seo": {
    "structuredData": true,
    "metaTags": true,
    "sitemap": true,
    "canonical": true
  }
}
